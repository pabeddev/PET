{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "server/public" 
      }
    },
    {
      "src": "server/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "server/public/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "server/main.js" 
    }
  ]
}
